# Ra'd AI Environment Configuration
# Copy this file to .env and fill in your values
# For Streamlit Cloud, add these to your secrets.toml

# =============================================================================
# Required: API Keys
# =============================================================================

# OpenRouter API Key (required for LLM functionality)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# =============================================================================
# Optional: API Configuration
# =============================================================================

# API timeout in seconds (default: 30)
API_TIMEOUT=30

# Maximum retry attempts for failed API calls (default: 3)
API_MAX_RETRIES=3

# Retry backoff multiplier (default: 0.5)
API_RETRY_BACKOFF=0.5

# =============================================================================
# Optional: Model Configuration
# =============================================================================

# Default LLM model (default: openrouter/google/gemini-3-flash-preview)
DEFAULT_MODEL=openrouter/google/gemini-3-flash-preview

# Display name for default model (default: Gemini 3 Flash)
MODEL_DISPLAY_NAME=Gemini 3 Flash

# =============================================================================
# Optional: Cache Configuration
# =============================================================================

# Cache time-to-live in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Enable caching (default: true)
ENABLE_CACHE=true

# =============================================================================
# Optional: Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# =============================================================================
# Optional: Feature Flags
# =============================================================================

# Enable debug mode with verbose logging (default: false)
DEBUG_MODE=false

# Show generated code by default in responses (default: false)
SHOW_CODE_BY_DEFAULT=false

# Enable automatic query routing to optimized views (default: true)
ENABLE_QUERY_ROUTING=true

# =============================================================================
# Optional: Data Paths
# =============================================================================

# Data directory path (default: data)
DATA_DIR=data

# Optimized data directory (default: data/tasi_optimized)
TASI_OPTIMIZED_DIR=data/tasi_optimized

# =============================================================================
# Optional: Environment
# =============================================================================

# Environment: development, staging, production (default: development)
ENVIRONMENT=development
